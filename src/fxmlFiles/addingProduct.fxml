               </stops>
            </LinearGradient>
         </fill>
      </Text>
      <TextField fx:id="productidtxf" layoutX="150.0" layoutY="110.0" prefHeight="25.0" prefWidth="119.0" promptText="productid" />
      <TextField fx:id="productnametxf" layoutX="150.0" layoutY="145.0" prefHeight="25.0" prefWidth="119.0" promptText="productname" />
      <TextField fx:id="pricetxf" layoutX="150.0" layoutY="215.0" prefHeight="25.0" prefWidth="119.0" promptText="price" />
