<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <Text layoutX="125.0" layoutY="94.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Sign in to Online Store">
         <font>
            <Font size="35.0" />
         </font>
         <fill>
            <LinearGradient endX="1.0" endY="1.0">
               <stops>
                  <Stop color="#8c0404" />
                  <Stop color="#8c0404" offset="0.7576530612244897" />
                  <Stop color="#353871" offset="0.7755102040816328" />
                  <Stop color="#8c0404" offset="1.0" />
               </stops>
            </LinearGradient>
         </fill>
      </Text>
      <TextField fx:id="usernametxf" layoutX="225.0" layoutY="149.0" promptText="username" />
      <PasswordField fx:id="passwordtxf" layoutX="225.0" layoutY="187.0" promptText="password" />
      <RadioButton fx:id="customerbutton" layoutX="225.0" layoutY="250.0" mnemonicParsing="false" text="Log in as a customer" />
      <RadioButton fx:id="adminbutton" layoutX="225.0" layoutY="275.0" mnemonicParsing="false" text="Log in as an admin" />
      <Label fx:id="statuslbl" layoutX="225.0" layoutY="304.0" text="Username and password failure">
         <font>
            <Font size="18.0" />
         </font>
         <textFill>
            <LinearGradient endX="1.0" endY="1.0">
               <stops>
                  <Stop color="#990303" />
                  <Stop color="#990303" offset="0.9311224489795916" />
                  <Stop color="WHITE" offset="1.0" />
               </stops>
            </LinearGradient>
         </textFill>
      </Label>
      <Label layoutX="225.0" layoutY="331.0" text="Wrong user type is selected">
         <font>
            <Font size="18.0" />
         </font>
         <textFill>
            <LinearGradient endX="1.0" endY="1.0">
               <stops>
                  <Stop color="#990303" />
                  <Stop color="#990303" offset="0.9464285714285712" />
                  <Stop color="WHITE" offset="1.0" />
               </stops>
            </LinearGradient>
         </textFill>
      </Label>
      <Label layoutX="225.0" layoutY="232.0" text="User Type:" />
      <Button fx:id="SignInButton" layoutX="423.0" layoutY="187.0" mnemonicParsing="false" text="Sign In" />
      <Label layoutX="225.0" layoutY="358.0" text="Login succeeded...">
         <font>
            <Font size="18.0" />
         </font>
         <textFill>
            <LinearGradient endX="1.0" endY="1.0">
               <stops>
                  <Stop color="#990303" />
                  <Stop color="#990303" offset="0.9464285714285712" />
                  <Stop color="WHITE" offset="1.0" />
               </stops>
            </LinearGradient>
         </textFill>
      </Label>
      <Button fx:id="backButton" layoutX="125.0" layoutY="121.0" mnemonicParsing="false" onAction="#backButtonClicked" prefHeight="25.0" prefWidth="53.0" text="Back" />
   </children>
</AnchorPane>
